  <div class="card-body">
  <%let i=0; Employeesss.forEach((Employeess, i)=>{%>
  <ul class="list-group list-group-flush">
  <h5 class="list-group-item"><strong>Name:</strong> <%= Employeess.name %> </h5>
  <div class="card shadow secondary" style="width: 28rem;">
  <img src="<%= Employeess.image %>" class="rounded float-center" alt="...">
  <div class="card-body">
    <h5 class="card-title"><strong>Job Description:</strong> <%= Employeess.position %> </h5><br>
    <h5 class="card-title"><strong>Gender:</strong> <%= Employeess.gender %> </h5><br>
    <h5 class="card-title"><strong>Age:</strong> <%= Employeess.age %> </h5><br>
    <h5 class="card-title"><strong>Year of Employment:</strong> <%= Employeess.year %> </h5><br>
    <% if(Employeess.position == 'Administrator'){ %>
    <a href="inputTODO" class="btn btn-light"> <%= Employeess.rr %> </a>
    
    <% } else { %> 
        <a href="/route" class="btn btn-light"> <%= Employeess.rr %> </a>
    <% } %>

  </div>
  <%})%>
</div>

